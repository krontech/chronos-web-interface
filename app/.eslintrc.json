{
    "env": {
        "browser": true,
        "es2020": true,
        "commonjs": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-mixed-spaces-and-tabs": [
            "error",
            "smart-tabs"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}